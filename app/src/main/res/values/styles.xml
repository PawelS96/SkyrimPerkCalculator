<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGrayDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorGrayDark</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>et
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/round_backgr_gray</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textColorPrimary">@color/colorFont</item>
    </style>

    <style name="CustomDialogThemeApi21" parent="Theme.AppCompat.Dialog.Alert">
    </style>

    <style name="SkillButton">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_columnSpan">1</item>
        <item name="android:layout_rowSpan">1</item>
    </style>

    <style name="SkillPerkCount">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="SkillLabel">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="ListButton">
        <item name="android:clickable">false</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/vertical_ellipsis</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="RadioGroupHeader">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioButton">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="buttonTint">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="spinner_style" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/colorFont</item>
    </style>

    <style name="colorControlHighlight_blue">
        <item name="colorControlHighlight">@color/colorRipple</item>
    </style>

    <style name="MaterialCircleButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="iconSize">25dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="MaterialButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="textAllCaps">true</item>
        <item name="backgroundTint">@color/colorBlue</item>
    </style>

    <style name="PerkCounter" parent="MaterialCircleButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">10sp</item>

    </style>

</resources>
